{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://videogenerator.app/schemas/timeline.schema.json",
  "title": "VideoGenerator Timeline Schema",
  "description": "Schema for VideoGenerator timeline JSON format",
  "type": "object",
  "required": [
    "id",
    "tracks",
    "size",
    "frameRate",
    "backgroundColor"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the timeline"
    },
    "tracks": {
      "type": "array",
      "description": "Array of tracks in the timeline",
      "items": {
        "$ref": "#/definitions/track"
      }
    },
    "size": {
      "$ref": "#/definitions/size",
      "description": "Output size of the video"
    },
    "frameRate": {
      "type": "integer",
      "minimum": 1,
      "maximum": 120,
      "description": "Frame rate of the video"
    },
    "backgroundColor": {
      "$ref": "#/definitions/color",
      "description": "Background color of the video"
    }
  },
  "definitions": {
    "track": {
      "type": "object",
      "required": [
        "id",
        "trackType",
        "isEnabled"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for the track"
        },
        "trackType": {
          "type": "string",
          "enum": [
            "video",
            "audio",
            "overlay",
            "effect"
          ],
          "description": "Type of the track"
        },
        "clips": {
          "type": [
            "array",
            "null"
          ],
          "description": "Array of clips in the track",
          "items": {
            "$ref": "#/definitions/clip"
          }
        },
        "isEnabled": {
          "type": "boolean",
          "description": "Whether the track is enabled"
        },
        "volume": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Volume level for audio tracks"
        },
        "opacity": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity level for video tracks"
        }
      }
    },
    "clip": {
      "type": "object",
      "required": [
        "id",
        "mediaItem",
        "timeRange",
        "frame",
        "contentMode",
        "effects",
        "opacity"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for the clip"
        },
        "mediaItem": {
          "$ref": "#/definitions/mediaItem"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        },
        "frame": {
          "$ref": "#/definitions/rect"
        },
        "contentMode": {
          "type": "string",
          "enum": [
            "scaleToFill",
            "aspectFit",
            "aspectFill"
          ],
          "description": "How the content should be scaled within the frame"
        },
        "effects": {
          "type": "array",
          "description": "Array of effects applied to the clip",
          "items": {
            "$ref": "#/definitions/effect"
          }
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity of the clip"
        }
      }
    },
    "mediaItem": {
      "type": "object",
      "required": [
        "id",
        "type",
        "duration"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for the media item"
        },
        "type": {
          "type": "string",
          "enum": [
            "video",
            "image",
            "text",
            "audio",
            "shape"
          ],
          "description": "Type of media item"
        },
        "duration": {
          "$ref": "#/definitions/time"
        },
        "url": {
          "type": [
            "string",
            "null"
          ],
          "description": "URL/path for video or audio media"
        },
        "imageData": {
          "type": [
            "string",
            "null"
          ],
          "description": "Base64 encoded image data"
        },
        "text": {
          "type": [
            "string",
            "null"
          ],
          "description": "Text content for text media items"
        },
        "font": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "Font name"
            },
            "size": {
              "type": "number",
              "minimum": 1,
              "description": "Font size"
            }
          },
          "required": [
            "name",
            "size"
          ],
          "additionalProperties": false
        },
        "color": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "red": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Red component (0-1)"
            },
            "green": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Green component (0-1)"
            },
            "blue": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Blue component (0-1)"
            },
            "alpha": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Alpha component (0-1)"
            }
          },
          "required": [
            "red",
            "green",
            "blue",
            "alpha"
          ],
          "additionalProperties": false,
          "description": "Text color"
        },
        "strokeColorRed": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Stroke color red component (0-1)"
        },
        "strokeColorGreen": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Stroke color green component (0-1)"
        },
        "strokeColorBlue": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Stroke color blue component (0-1)"
        },
        "strokeColorAlpha": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Stroke color alpha component (0-1)"
        },
        "textStrokeWidth": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "description": "Text stroke width"
        },
        "shadowColorRed": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Shadow color red component (0-1)"
        },
        "shadowColorGreen": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Shadow color green component (0-1)"
        },
        "shadowColorBlue": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Shadow color blue component (0-1)"
        },
        "shadowColorAlpha": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "description": "Shadow color alpha component (0-1)"
        },
        "shadowOffsetWidth": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 1,
          "description": "Shadow offset width in pixels"
        },
        "shadowOffsetHeight": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 1,
          "description": "Shadow offset height in pixels"
        },
        "shadowBlur": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "description": "Shadow blur radius"
        },
        "behavior": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "wrap",
            "truncate",
            "autoScale",
            null
          ],
          "description": "Text behavior"
        },
        "alignment": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "left",
            "center",
            "right",
            "justified",
            "natural",
            null
          ],
          "description": "Text alignment"
        },
        "shapeType": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "rectangle",
            "circle",
            "ellipse",
            "triangle",
            null
          ],
          "description": "Type of shape"
        },
        "fillColor": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "red": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Red component (0-1)"
            },
            "green": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Green component (0-1)"
            },
            "blue": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Blue component (0-1)"
            },
            "alpha": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Alpha component (0-1)"
            }
          },
          "required": [
            "red",
            "green",
            "blue",
            "alpha"
          ],
          "additionalProperties": false,
          "description": "Fill color for shapes"
        },
        "strokeColor": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "red": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Red component (0-1)"
            },
            "green": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Green component (0-1)"
            },
            "blue": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Blue component (0-1)"
            },
            "alpha": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Alpha component (0-1)"
            }
          },
          "required": [
            "red",
            "green",
            "blue",
            "alpha"
          ],
          "additionalProperties": false,
          "description": "Stroke color for shapes"
        },
        "strokeWidth": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "description": "Stroke width for shapes"
        }
      }
    },
    "effect": {
      "type": "object",
      "required": [
        "id",
        "type",
        "parameters"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for the effect"
        },
        "type": {
          "type": "string",
          "description": "Type of effect (e.g., brightness, contrast, blur, etc.)"
        },
        "parameters": {
          "type": "object",
          "description": "Effect parameters",
          "properties": {
            "double": {
              "type": ["number", "null"]
            },
            "float": {
              "type": ["number", "null"]
            },
            "int": {
              "type": ["integer", "null"]
            },
            "bool": {
              "type": ["boolean", "null"]
            },
            "string": {
              "type": ["string", "null"]
            },
            "color": {
              "type": ["object", "null"],
              "properties": {
                "red": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Red component (0-1)"
                },
                "green": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Green component (0-1)"
                },
                "blue": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Blue component (0-1)"
                },
                "alpha": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Alpha component (0-1)"
                }
              },
              "required": [
                "red",
                "green",
                "blue",
                "alpha"
              ],
              "additionalProperties": false
            },
            "size": {
              "type": ["object", "null"],
              "properties": {
                "width": {
                  "type": "number",
                  "minimum": 1,
                  "description": "Width in pixels"
                },
                "height": {
                  "type": "number",
                  "minimum": 1,
                  "description": "Height in pixels"
                }
              },
              "required": [
                "width",
                "height"
              ],
              "additionalProperties": false
            },
            "point": {
              "type": ["object", "null"],
              "properties": {
                "x": {
                  "type": "number",
                  "description": "X coordinate"
                },
                "y": {
                  "type": "number",
                  "description": "Y coordinate"
                }
              },
              "required": [
                "x",
                "y"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    },
    "time": {
      "type": "object",
      "required": [
        "seconds",
        "preferredTimescale"
      ],
      "additionalProperties": false,
      "properties": {
        "seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Time in seconds"
        },
        "preferredTimescale": {
          "type": "integer",
          "minimum": 1,
          "description": "Preferred timescale for time representation"
        }
      }
    },
    "timeRange": {
      "type": "object",
      "required": [
        "start",
        "duration"
      ],
      "additionalProperties": false,
      "properties": {
        "start": {
          "$ref": "#/definitions/time"
        },
        "duration": {
          "$ref": "#/definitions/time"
        }
      }
    },
    "size": {
      "type": "object",
      "required": [
        "width",
        "height"
      ],
      "additionalProperties": false,
      "properties": {
        "width": {
          "type": "number",
          "minimum": 1,
          "description": "Width in pixels"
        },
        "height": {
          "type": "number",
          "minimum": 1,
          "description": "Height in pixels"
        }
      }
    },
    "rect": {
      "type": "object",
      "required": [
        "x",
        "y",
        "width",
        "height"
      ],
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate"
        },
        "y": {
          "type": "number",
          "description": "Y coordinate"
        },
        "width": {
          "type": "number",
          "minimum": 0,
          "description": "Width"
        },
        "height": {
          "type": "number",
          "minimum": 0,
          "description": "Height"
        }
      }
    },
    "point": {
      "type": "object",
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate"
        },
        "y": {
          "type": "number",
          "description": "Y coordinate"
        }
      }
    },
    "color": {
      "type": "object",
      "required": [
        "red",
        "green",
        "blue",
        "alpha"
      ],
      "additionalProperties": false,
      "properties": {
        "red": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Red component (0-1)"
        },
        "green": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Green component (0-1)"
        },
        "blue": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Blue component (0-1)"
        },
        "alpha": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Alpha component (0-1)"
        }
      }
    },
    "textStroke": {
      "type": "object",
      "required": [
        "color",
        "width"
      ],
      "additionalProperties": false,
      "properties": {
        "color": {
          "$ref": "#/definitions/color"
        },
        "width": {
          "type": "number",
          "minimum": 0,
          "description": "Stroke width"
        }
      }
    },
    "textShadow": {
      "type": "object",
      "required": [
        "color",
        "offset",
        "blur"
      ],
      "additionalProperties": false,
      "properties": {
        "color": {
          "$ref": "#/definitions/color"
        },
        "offset": {
          "$ref": "#/definitions/size"
        },
        "blur": {
          "type": "number",
          "minimum": 0,
          "description": "Shadow blur radius"
        }
      }
    }
  }
}